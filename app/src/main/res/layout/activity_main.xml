<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-black"
        android:text="Menu"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3Id"
        android:layout_width="260dp"
        android:layout_height="51dp"
        android:layout_marginTop="60dp"
        android:text="Trabalho 3 (Netflix)"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/button4Id"
        app:layout_constraintTop_toBottomOf="@+id/button2Id" />

    <Button
        android:id="@+id/button2Id"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:text="Trabalho 2 "
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/button3Id"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button4Id"
        android:layout_width="255dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:text="Trabalho 4"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3Id"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>